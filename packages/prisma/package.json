{
  "name": "@motech-development/prisma",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "run prebuild && rollup -c && run postbuild",
    "generate": "prisma generate",
    "lint": "eslint \"src\"",
    "lint-staged": "lint-staged",
    "package": "run build",
    "postbuild": "run -T tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "run -T rimraf ./lib && run generate",
    "test": "jest --watch",
    "test-ci": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.1",
    "@nestjs/core": "^8.1.1",
    "@prisma/client": "^3.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-proposal-decorators": "7.16.0",
    "@babel/plugin-transform-runtime": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@motech-development/eslint-config-motech-base": "workspace:packages/eslint-config-motech-base",
    "@nestjs/testing": "8.1.2",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@types/jest": "27.0.2",
    "eslint": "7.32.0",
    "jest": "27.3.1",
    "lint-staged": "11.2.6",
    "prettier": "2.4.1",
    "prisma": "3.3.0",
    "rollup": "2.58.3",
    "rollup-plugin-exclude-dependencies-from-bundle": "1.1.22"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{js,ts}": "eslint --cache --fix"
  }
}
